---
global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:

rule_files:

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets:
          - "{{ target_node_a }}:19100"
          - "{{ target_node_b }}:19100"
          - "{{ target_node_c }}:19100"

  - job_name: 'cadvisor'
    static_configs:
      - targets:
          - "{{ target_node_a }}:19101"
          - "{{ target_node_b }}:19101"
          - "{{ target_node_c }}:19101"

  - job_name: 'gitlab_runner'
    static_configs:
      - targets:
          - "{{ target_node_a }}:9252"
          - "{{ target_node_b }}:9252"
          - "{{ target_node_c }}:9252"
